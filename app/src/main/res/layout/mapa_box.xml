<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mapaBox"
    android:background="@drawable/wood_3">


    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="607dp"
        android:layout_height="908dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="120dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="77dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:id="@+id/setRoute"
        android:text="Ruta"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/focusLocation"
        android:layout_width="181dp"
        android:layout_height="156dp"
        android:layout_above="@id/setRoute"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16sp"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginBottom="16sp"
        android:src="@drawable/baseline_my_location_24" />



    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="464dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="173dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="164dp"
        android:fontFamily="cursive"
        android:text="Guarida Secreta"
        android:textColor="#FFFFFF"
        android:textSize="70dp" />


</RelativeLayout>